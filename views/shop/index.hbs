<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
<div class="row">
	{{# each this }}
	<div class="col-sm-6 col-md-4">
		<div class="box">
			<img src="{{this.imagePath}}" alt="Boat Image" class="img-responsive">
			<div>
				<h3><b>{{ this.title }}</b></h3>
				<p>{{ this.description }}</p>
				<p>Category: {{ this.boatType }}</p>
				<p>Length: {{ this.length }}</p>
				<p>Make: {{ this.year }}</p>
				<div class="price">Price: ${{ this.price }}</div>
				<div>	
					<a href="/add-to-cart/{{this._id}}" class ="btn btn-primary" role="button">
						<i class="fas fa-cart-plus"></i> Add to Cart</a> 
					<a href="/buy-now/{{this._id}}" class ="btn btn-primary btn-warning" role="button">
						<i class="fas fa-shopping-cart"></i> Buy now</a>
				</div>
				
			</div>
		</div>
	</div>
	{{/each}}
</div>
{{/each}}