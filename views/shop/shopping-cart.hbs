{{# if products }}
    <div class="row">
        <div class="container">
            <ul class="list-group list-group-flush">
                {{# each products }}
                    <li class="list-group-item">
                        <img class="icon" src = "{{ this.item.imagePath}}" alt={{this.item.id}} style="width:10%">
                            <a class="btn btn-primary btn-sm"  href="/decrease/{{this.item._id}}">-</a>
                            <button type="button" class="btn btn-outline-info btn-disabled" >  {{ this.qty }}  </button>
                            <a class="btn btn-primary btn-sm" href="/increase/{{this.item._id}}">+</a>
                        
                        <strong>  {{ this.item.title }}  </strong>
                        <span class="label label-success">  ${{ this.price }}  </span>
                        <a class="btn btn-primary" href="/remove/{{this.item._id}}"><i class="fas fa-trash-alt"></i></a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: ${{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <img src = "../images/emptycart.png" alt="Empty Cart" class="rounded" style="width : 70vw">
            <h3 class="top-left">Your Cart is empty.</h3>
        </div>
    </div>
{{/if}}